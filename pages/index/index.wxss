.container {
  padding: 30rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

.header {
  margin-bottom: 40rpx;
  text-align: center;
}

.title {
  display: block;
  font-size: 42rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

textarea {
  width: 100%;
  height: 240rpx;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  background-color: #f9f9f9;
  padding: 20rpx;
  margin-bottom: 30rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

button {
  width: 100%;
  background-color: #007aff;
  color: white;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 34rpx;
  font-weight: 500;
  margin-bottom: 40rpx;
}

button[disabled] {
  background-color: #93c4fd;
  color: #ffffff;
}

.result-container {
  background-color: #f9f9f9;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-top: 20rpx;
}

.result-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
  font-weight: 500;
}

.result {
  text-align: center;
  font-size: 38rpx;
  font-weight: bold;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.fraud {
  background-color: #ffebee;
  color: #d32f2f;
}

.normal {
  background-color: #e8f5e9;
  color: #2e7d32;
}

.error {
  background-color: #f5f5f5;
  color: #757575;
}

.tips {
  font-size: 28rpx;
  color: #666;
  line-height: 40rpx;
  margin-top: 20rpx;
  text-align: center;
} 